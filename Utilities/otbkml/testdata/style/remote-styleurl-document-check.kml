<Style id="allstyles">
  <IconStyle id="iconstyle">
    <scale>1.2</scale>
    <heading>90.5</heading>
    <hotSpot x="0.1" xunits="fraction" y="10" yunits="pixels"/>
    <Icon>
      <href>http://example.com/image.png</href>
    </Icon>
  </IconStyle>
  <LabelStyle>
    <scale>0.8</scale>
  </LabelStyle>
  <LineStyle>
    <width>2</width>
  </LineStyle>
  <PolyStyle>
    <fill>0</fill>
    <outline>0</outline>
  </PolyStyle>
  <BalloonStyle>
    <bgColor>00112233</bgColor>
    <textColor>33221100</textColor>
    <text><![CDATA[<b>$[name]</b><br /><br />$[description]]]></text>
    <displayMode>hide</displayMode>
  </BalloonStyle>
  <ListStyle>
    <listItemType>checkHideChildren</listItemType>
    <bgColor>10112233</bgColor>
    <ItemIcon>
      <href>http://example.com/image.png</href>
    </ItemIcon>
    <ItemIcon>
      <state>closed</state>
      <href>http://example.com/image.png</href>
    </ItemIcon>
  </ListStyle>
</Style>
