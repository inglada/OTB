#
# This file sets up include directories, link directories, and
# compiler settings for a project to use CAI.  It should not be
# included directly, but rather through the CAI_USE_FILE setting
# obtained from CAIConfig.cmake.
#

IF(CAI_BUILD_SETTINGS_FILE)
  INCLUDE(${CMAKE_ROOT}/Modules/CMakeImportBuildSettings.cmake)
  CMAKE_IMPORT_BUILD_SETTINGS(${CAI_BUILD_SETTINGS_FILE})
ENDIF(CAI_BUILD_SETTINGS_FILE)

# Add compiler flags needed to use CAI.
SET(CMAKE_C_FLAGS "${CMAKE_C_FLAGS} ${CAI_REQUIRED_C_FLAGS}")
SET(CMAKE_CXX_FLAGS "${CMAKE_CXX_FLAGS} ${CAI_REQUIRED_CXX_FLAGS}")
SET(CMAKE_EXE_LINKER_FLAGS "${CMAKE_EXE_LINKER_FLAGS} ${CAI_REQUIRED_LINK_FLAGS}")
SET(CMAKE_SHARED_LINKER_FLAGS "${CMAKE_SHARED_LINKER_FLAGS} ${CAI_REQUIRED_LINK_FLAGS}")
SET(CMAKE_MODULE_LINKER_FLAGS "${CMAKE_MODULE_LINKER_FLAGS} ${CAI_REQUIRED_LINK_FLAGS}")

# Add include directories needed to use CAI.
INCLUDE_DIRECTORIES(BEFORE ${CAI_INCLUDE_DIRS})

# Add link directories needed to use CAI.
LINK_DIRECTORIES(${CAI_LIBRARY_DIRS})

