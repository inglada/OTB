#-----------------------------------------------------------------------------
#
# CAIConfig.cmake - CAI CMake configuration file for external projects.
#
# This file is configured by CAI and used by the UseCAI.cmake module
# to load CAI's settings for an external project.

# The CAI source tree.
SET(CAI_SOURCE_DIR "@CAI_SOURCE_DIR@")

# The CAI include file directories.
SET(CAI_INCLUDE_DIRS "@CAI_INCLUDE_DIRS_CONFIG@")

# The CAI library directories.
SET(CAI_LIBRARY_DIRS "@CAI_LIBRARY_DIRS_CONFIG@")

# The C and C++ flags added by CAI to the cmake-configured flags.
SET(CAI_REQUIRED_C_FLAGS "@CAI_REQUIRED_C_FLAGS@")
SET(CAI_REQUIRED_CXX_FLAGS "@CAI_REQUIRED_CXX_FLAGS@")
SET(CAI_REQUIRED_LINK_FLAGS "@CAI_REQUIRED_LINK_FLAGS@")

# The location of the UseCAI.cmake file.
SET(CAI_USE_FILE "@CAI_USE_FILE@")

# The build settings file.
SET(CAI_BUILD_SETTINGS_FILE "@CAI_BUILD_SETTINGS_FILE@")

# Whether CAI was built with shared libraries.
SET(CAI_BUILD_SHARED "@BUILD_SHARED_LIBS@")

# The CAI library dependencies.
IF(NOT CAI_NO_LIBRARY_DEPENDS)
  INCLUDE("@CAI_LIBRARY_DEPENDS_FILE@")
ENDIF(NOT CAI_NO_LIBRARY_DEPENDS)
