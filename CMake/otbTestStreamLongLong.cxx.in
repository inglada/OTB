#if defined(_MSC_VER)
# pragma warning (push, 1)
#endif

// Include the streams library.
#cmakedefine OTB_USE_ANSI_STDLIB
#if defined(OTB_USE_ANSI_STDLIB)
# include <iostream>
using std::ostream;
using std::istream;
using std::cout;
using std::cin;
#else
# include <iostream.h>
#endif

#if defined(_MSC_VER)
# pragma warning (pop)
#endif

#if defined(OTB_TEST_OSTREAM_LONG_LONG)
int test_ostream(ostream& os, long long x)
{
  return (os << x)? 1:0;
}
#endif

#if defined(OTB_TEST_ISTREAM_LONG_LONG)
int test_istream(istream& is, long long& x)
{
  return (is >> x)? 1:0;
}
#endif

int main()
{
#if defined(OTB_TEST_OSTREAM_LONG_LONG)
  long long x = 0;
  return test_ostream(cout, x);
#endif
#if defined(OTB_TEST_ISTREAM_LONG_LONG)
  long long x;
  return test_istream(cin, x);
#endif
}

